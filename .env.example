# Polymarket API Configuration (Gamma API)
POLYMARKET_API_URL="https://gamma-api.polymarket.com"
POLYMARKET_API_TIMEOUT="10000"
POLYMARKET_CACHE_TTL="60"
POLYMARKET_CACHE_ENABLED="true"

# Encryption Keys
# Server wallet encryption key (32-byte hex) - used to encrypt private keys
SERVER_WALLET_ENCRYPTION_KEY="your-32-byte-hex-key"  # Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# Polymarket credentials encryption key (32-byte hex)
POLYMARKET_ENCRYPTION_KEY="your-32-byte-hex-key"  # Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# Polygon RPC Configuration
# Alchemy RPC endpoint for faster blockchain queries
POLYGON_RPC_URL="https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY"

# Supabase Configuration
PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
# Row Level Security is on - this is the anon/public key safe for browser use
PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
# Service role key - NEVER expose to browser, server-side only, bypasses RLS
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Polymarket Builder Program (for gasless transactions via relayer)
# Get these from: https://polymarket.com/builder-profile
# NEVER expose these in client-side code - server-side only!
BUILDER_API_KEY="your-builder-api-key"
BUILDER_SECRET="your-builder-secret"
BUILDER_PASSPHRASE="your-builder-passphrase"
RELAYER_ENDPOINT="https://relayer-v2.polymarket.com/"
