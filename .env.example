# Database
DATABASE_URL="postgres://root:mysecretpassword@localhost:5432/local"

# Polymarket API Configuration (Gamma API)
POLYMARKET_API_URL="https://gamma-api.polymarket.com"
POLYMARKET_API_TIMEOUT="10000"
POLYMARKET_CACHE_TTL="60"
POLYMARKET_CACHE_ENABLED="true"

# Dynamic Labs Configuration (Client)
PUBLIC_DYNAMIC_ENVIRONMENT_ID="your-environment-id"

# Dynamic Labs Configuration (Server)
DYNAMIC_ENVIRONMENT_ID="your-environment-id"
DYNAMIC_ORGANIZATION_ID="your-organization-id"
DYNAMIC_API_TOKEN="your-api-token"

# Dynamic Server Wallets Configuration
# Enable "Multiple embedded wallets per chain" in Dashboard -> Embedded Wallets
# Create API token in Dashboard -> Developer -> API
DYNAMIC_SERVER_WALLET_ENCRYPTION_KEY="your-64-byte-hex-key"  # Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# Polymarket CLOB Configuration
POLYMARKET_CLOB_URL="https://clob.polymarket.com"
POLYMARKET_GAMMA_API_URL="https://gamma-api.polymarket.com"

# Encryption Keys (for storing Polymarket credentials)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
POLYMARKET_ENCRYPTION_KEY="your-32-byte-hex-key"

# JWT Configuration (optional - for future use)
JWT_SECRET="your-jwt-secret"
JWT_EXPIRATION="7d"

# WalletConnect Configuration (optional)
PUBLIC_WALLETCONNECT_PROJECT_ID="your-walletconnect-project-id"

# Porto Configuration (optional, defaults to Polygon mainnet)
PORTO_CHAIN_ID="137"
